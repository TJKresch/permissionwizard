<h1>Listing tabs</h1>

<table>
  <tr>
    <th>Read only text</th>
    <th>Standard text</th>
    <th>Admin text</th>
    <th>Workflow text</th>
    <th>Note</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tabs.each do |tab| %>
  <tr>
    <td><%= tab.read_only_text %></td>
    <td><%= tab.standard_text %></td>
    <td><%= tab.admin_text %></td>
    <td><%= tab.workflow_text %></td>
    <td><%= tab.note %></td>
    <td><%= link_to 'Show', tab %></td>
    <td><%= link_to 'Edit', edit_tab_path(tab) %></td>
    <td><%= link_to 'Destroy', tab, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

